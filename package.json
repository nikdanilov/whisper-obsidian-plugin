{
	"name": "whisper",
	"version": "1.5.3",
	"description": "Speech-to-text in Obsidian using OpenAI Whisper",
	"main": "main.js",
	"scripts": {
		"dev": "node esbuild.config.mjs",
		"build": "tsc -noEmit -skipLibCheck && node esbuild.config.mjs production",
		"release": "release-it"
	},
	"keywords": [],
	"author": "Nik Danilov",
	"license": "MIT",
	"devDependencies": {
		"@commitlint/cli": "^17.6.5",
		"@commitlint/config-conventional": "^17.6.5",
		"@release-it/conventional-changelog": "^5.1.1",
		"@types/node": "^16.11.6",
		"@typescript-eslint/eslint-plugin": "5.29.0",
		"@typescript-eslint/parser": "5.29.0",
		"builtin-modules": "3.3.0",
		"dotenv": "^16.3.1",
		"esbuild": "^0.18.0",
		"husky": "^8.0.3",
		"lint-staged": "^13.2.2",
		"obsidian": "latest",
		"prettier": "^2.8.8",
		"release-it": "^15.11.0",
		"tslib": "2.4.0",
		"typescript": "4.7.4"
	},
	"dependencies": {
		"axios": "^1.3.4"
	},
	"release-it": {
		"hooks": {
			"before:release": "npm run build",
			"after:bump": "node verify-and-update.mjs",
			"pre-commit": "lint-staged"
		},
		"lint-staged": {
			"*": "prettier --write"
		},
		"git": {
			"commitMessage": "chore: release v${version}",
			"github": {
				"release": true,
				"assets": [
					"main.js",
					"manifest.json",
					"styles.css"
				]
			}
		},
		"npm": {
			"publish": false
		},
		"plugins": {
			"@release-it/conventional-changelog": {
				"infile": "CHANGELOG.md",
				"preset": {
					"name": "conventionalcommits",
					"types": [
						{
							"type": "feat",
							"section": "Features"
						},
						{
							"type": "fix",
							"section": "Bug Fixes"
						}
					]
				}
			}
		}
	}
}
